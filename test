# Grabs the VM called 'dc1' and puts it in 'vm'.
$vm = Get-VM -Name dc1

# Snags the 'Base-dc1' snapshot from our VM and sticks it into 'snapshot'.
$snapshot = Get-Snapshot -VM $vm -Name "Base-dc1"

# Lists all the VM hosts we've got going on.
Get-VMHost

# Finds the host with the IP '192.168.7.20' and saves it as 'vmhost'.
$vmhost = Get-VMHost -Name "192.168.7.20"

# Shows all the storage spots (datastores) available.
Get-DataStore

# Picks out 'datastore1' and drops it into 'ds'.
$ds = Get-DataStore -Name "datastore1-super10"
